extends ../main-layout/main-layout

block content
    if products.length > 0
        .grid
            each product in products
                article.card.product-item
                    header.card__header
                        h1.product__title #{product.title}
                    .card__image
                        img(src=product.imageUrl, alt="A Book")
                        // https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png
                        // https://cdn.pixabay.com/photo/2021/10/10/21/52/makeup-6698881_1280.jpg
                        // https://cdn.pixabay.com/photo/2014/06/18/18/41/running-shoe-371624_1280.jpg
                    .card__content
                        h2.product__price $#{product.price || 0}
                        p.product__description #{product.description}
                    .card__actions
                        a.link-btn(href="/products/" + product.id) Details
                        form(action="/cart", method="POST")
                            button.btn(type="submit") Add to Cart
                            input(type="hidden" name="productId" value=product.id)
    else
        h1 No Products Found!
