extends ../main-layout/main-layout

block content
    .auth-bg
        // Animated background area
        .area
            ul.circles
                li
                li
                li
                li
                li
                li
                li
                li
                li
                li
        // Auth content on top of background
        .auth-content
            .login-container
                .login-form
                    h1.login-title Set New Password

                    if errorMessage
                        .alert.alert-danger=errorMessage
                    if successMessage
                        .alert.alert-success=successMessage

                    form(action="/new-password" method="POST", novalidate="true", id="newPasswordForm")
                        input(type="hidden", name="_csrf", value=csrfToken)
                        input(type="hidden", name="userId", value=userId)
                        input(type="hidden", name="passwordToken", value=passwordToken)

                        .form-group
                            label(for="password") New Password
                            input#password.form-control(type="password", name="password", placeholder="Enter your new password", required, minlength="6", pattern="^[a-zA-Z0-9]+$")
                            .invalid-feedback

                        .form-group
                            label(for="confirmPassword") Confirm New Password
                            input#confirmPassword.form-control(type="password", name="confirmPassword", placeholder="Confirm your new password", required)
                            .invalid-feedback

                        .form-group
                            button.btn.btn-primary(type="submit") Update Password

                        .form-group
                            p.signup-link
                                a(href="/login") Back to login
